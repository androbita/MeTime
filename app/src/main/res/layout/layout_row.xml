<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="2dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/txtTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal : "/>

            <TextView
                android:id="@+id/iniTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txtTanggal"/>

            <TextView
                android:id="@+id/txtMulai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jam Mulai : "
                android:layout_below="@id/txtTanggal"/>

            <TextView
                android:id="@+id/iniJamMulai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iniTanggal"
                android:layout_toRightOf="@id/txtMulai"/>

            <TextView
                android:id="@+id/txtSelesai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtMulai"
                android:text="Jam Selesai : "/>

            <TextView
                android:id="@+id/iniJamSelesai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jam Selesai : "
                android:layout_below="@id/iniJamMulai"
                android:layout_toRightOf="@id/txtSelesai"/>
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>